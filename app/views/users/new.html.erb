<div class="container mt4">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <!-- <div className="card panel-div"> -->
            <h1 class="text-center form-header-style mt-5 pt-2 pb-3">
              Sign Up
            </h1>

            <div class="form-body-style px-5 pt-4">
              <%= form_with model: @user, local:true do |f|%>
                <div class="form-group row">
                  <div class="col-md-3 col-form-label">
                    <%= f.label :first_name %>
                  </div>
                  <div class="col-md-9">
                    <%= f.text_field :first_name, class: "form-control", placeholder: "Your First name", autofocus: true%>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-3 col-form-label">
                    <%= f.label :last_name %>
                  </div>
                  <div class="col-md-9">
                    <%= f.text_field :last_name, class: "form-control", placeholder: "Your Last name"%>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-3 col-form-label">
                  <%= f.label :email %>
                  </div>
                  <div class="col-md-9">
                  <%= f.email_field :email, class: "form-control", placeholder: "Your Email Address"%>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-3 col-form-label">
                  <%= f.label :password %>
                  </div>
                  <div class="col-md-9">
                  <%= f.password_field :password, class: "form-control", placeholder: "Enter Your Password here"%>
                  </div>
                </div>

                <div class="form-group row">
                  <div class="col-md-10 offset-md-3">
                    <%= f.submit 'Sign up', class: "btn-btn-outline-purple"%>
                  </div>
                </div>
              <%end%>
            </div>
          <!-- </div> -->
        </div>
      </div>
    </div>