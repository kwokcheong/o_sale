 <nav class="navbar navbar-expand-lg navbar-light ">
      <%= link_to 'O-sale', root_path, class: "navbar-brand goog" %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">

            <%= link_to root_path, class: "nav-link" do %>
            Home <span class="sr-only">(current)</span>
            <%end%>
          </li>
          <li class="nav-item">
            <%= link_to 'New Product', new_product_path, class: "nav-link" %>
          </li>
          <% unless current_user %>
          <li class="nav-item">
            <%= link_to 'Sign In',signin_path,class: "nav-link"  %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up',signup_path, class: "nav-link"  %>
          </li>
          <%else%>
          <!-- the default action for a link_to is a GET request! remember that. So if you want to use DELETE action, need to be specific. -->
           <li class="nav-item">
            <%= link_to 'Sign Out',session_path, method: :delete, class: "nav-link"  %>
          </li>
          <li class="nav-item">
            <p class="navbar-text" style="color: white">Welcome, <%= current_user.first_name %></p>
          </li>
          <%end%>
          <!-- extra: if you want a simple back link, <%= link_to "Back", :back %> -->
        </ul>
      </div>
    </nav>